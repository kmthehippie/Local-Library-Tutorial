
<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header') %>
<body>
  <div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">
            <%- include('partials/sidebar') %>
        </div>
        <div class="col-sm-10">
            <h1><%= title %>: <%= book.name %></h1>
          
            <% if (bookinstances.length) { %>
              <p><strong>Delete the following book instances before attempting to delete this author.</strong></p>
              <div style="margin-left:20px; margin-top:20px;">
                <h4>Book Instances</h4>
                <dl>
                  <% bookinstances.forEach(function(bookinstance) { %>
                    <dt>ID: <a href="<%= bookinstance.url %>"><%= book._id %></a></dt>
                    <dd><strong>Status: </strong>
                        <% if (bookinstance.status === 'Available') { %>
                          <span class="text-success"><%= bookinstance.status %></span>
                        <% } else if (bookinstance.status === 'Maintenance') { %>
                          <span class="text-danger"><%= bookinstance.status %></span>
                        <% } else { %>
                          <span class="text-warning"><%= bookinstance.status %></span>
                        <% } %>
                      </dd>
                  <% }); %>
                </dl>
              </div>
            <% } else { %>
              <p>Do you really want to delete this Book?</p>
              <form method="POST">
                <div class="form-group">
                  <input id="bookid" class="form-control" type="hidden" name="bookid" value="<%= book._id %>">
                </div>
                <button class="btn btn-primary" type="submit">Delete</button>
              </form>
            <% } %>
        </div>
    </div>
</div>
</body>
</html>

