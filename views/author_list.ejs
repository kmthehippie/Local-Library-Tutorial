<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header') %>
<body>
  <div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">
            <%- include('partials/sidebar') %>
        </div>
        <div class="col-sm-10">
          <h1><%= title %></h1>
            <% if(author_list.length>0){%>
                <ul>
                    <% author_list.forEach(author=>{ %>
                        <li>
                            <a href="<%=author.url%>"><%= author.name %></a> (<%=author.date_of_birth_formatted || "N/A"%> - <%=author.date_of_death_formatted || "N/A"%>)
                        </li>
                    <% }) %>
                </ul>
            <% } else {%>
                <p> There are no authors.</p>
            <% } %>

        </div>
    </div>
</div>
</body>
</html>